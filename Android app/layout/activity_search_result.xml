<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tharushashehan.ermsapp04.searchResult">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:background="@drawable/img03"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5b89ff"
        android:text="Name:"
        android:id="@+id/searchName"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/searchDegree"
        android:layout_alignEnd="@+id/searchDegree"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name result"
        android:id="@+id/txtSearchResultName"
        android:layout_alignTop="@+id/searchName"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5b89ff"
        android:text="degree:"
        android:id="@+id/searchDegree"
        android:layout_alignTop="@+id/txtSearchDegree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Degree Result"
        android:id="@+id/txtSearchDegree"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/txtSearchResultName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtSearchResultName"
        android:layout_alignStart="@+id/txtSearchResultName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5b89ff"
        android:text="Post:"
        android:id="@+id/searchPost"
        android:layout_alignTop="@+id/txtSearchPost"
        android:layout_alignLeft="@+id/searchName"
        android:layout_alignStart="@+id/searchName" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post result"
        android:id="@+id/txtSearchPost"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/txtSearchDegree"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtSearchDegree"
        android:layout_alignStart="@+id/txtSearchDegree" />

        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Back"
        android:id="@+id/btnSearchResultBack"/>

</RelativeLayout>
